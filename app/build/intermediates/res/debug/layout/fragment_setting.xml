<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.zelinz.msprojectv2.PermissionListFragment">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9900" >

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="setting"
            android:textColor="#FFFF"
            android:textSize="22sp" />
</RelativeLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >
        
 		<RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:id="@+id/notification"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="10dp"
	            android:layout_marginTop="10dp"
	            android:text="Always Notification"
	            android:textColor="#8B0000"
	            android:textSize="18sp"
	            android:textStyle="bold" />

		    <ToggleButton
		        android:id="@+id/notitog"
		        android:layout_width="50dp"
		        android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
		        android:background="@drawable/toggle_selector"
		        android:checked="false"
		        android:textOff=""
		        android:textOn=""
                android:layout_alignTop="@+id/notification"
                android:layout_alignBottom="@+id/notification" />

		</RelativeLayout>>

		<View
	         android:layout_width="match_parent"
	         android:layout_height="2dip"
	         android:layout_marginTop="10dp"
	         android:background="#FF909090" />

	     <TextView
	         android:id="@+id/ChangePassword"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginTop="10dp"
	         android:layout_x="78dp"
	         android:layout_y="108dp"
	         android:text="Change Password"
	         android:textColor="#8B0000"
	         android:textSize="18sp"
	         android:textStyle="bold" />

	     <View
	         android:layout_width="match_parent"
	         android:layout_height="2dip"
	         android:layout_marginTop="10dp"
	         android:layout_x="0dp"
	         android:layout_y="152dp"
	         android:background="#FF909090" />

	     </LinearLayout>
</LinearLayout>
